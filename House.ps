%%%%%%   Draw square as the body of the house   %%%%%%%

newpath
165 200 moveto
0 300 rlineto
300 0 rlineto
0 -300 rlineto
-300 0 rlineto closepath gsave

0.52 0.8 1 setrgbcolor fill grestore
0 0 0 setrgbcolor
2 setlinewidth stroke




%%%%%%   Draw triangle as the roof of the house   %%%%%%%

newpath
100 500 moveto
540 500 lineto
320	600 lineto closepath gsave

0.6 0.16 0.16 setrgbcolor fill grestore
2 setlinewidth
0 0 0 setrgbcolor stroke




%%%%%%   Draw rectangle as the door of the house   %%%%%%%

newpath
280 200 moveto
347 200 lineto
347	300 lineto 
280	300 lineto closepath gsave

0.6 0.16 0.16 setrgbcolor fill grestore
0 0 0 setrgbcolor
2 setlinewidth stroke




